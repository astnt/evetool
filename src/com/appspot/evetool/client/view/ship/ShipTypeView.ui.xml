<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
    >
  <ui:style>
    .item {
      position: relative;
      margin-bottom: 20px;
      float:left;
      padding-right:1em;
    }
    .item ul {
      list-style: none;
      padding-left:0;
    }
    .item li {
      list-style: none;
      padding-left:0;
    }    
    .item p {
      font-style:normal;
      margin: 0 0 0 0;
    }
  </ui:style>
  <g:HTMLPanel styleName="{style.item}">
    <p ui:field="header"></p>
    <ul ui:field="list"></ul>
  </g:HTMLPanel>
</ui:UiBinder>