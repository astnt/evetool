<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
    >
  <ui:style>
    .item {
      margin-left:40px;
    }
    h1 {
      margin-bottom:0;
      padding-bottom:0;
    }
    span {
      font-family:sans-serif;
      font-size:85%;
    }
    fieldset {
      width:30%;
    }
  </ui:style>
  <g:HTMLPanel styleName="{style.item}">
    <p ui:field="message"></p>
  </g:HTMLPanel>
</ui:UiBinder>