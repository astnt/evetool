<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
    >
  <ui:style>
    .item {
      position: relative;
      margin-bottom: 15px;
    }
    .item img {
      position: absolute;
      top: 0;
      left: 0;
    }
    .item div {
      font-family: sans;
      font-size:0.8em;
      margin-left: 20px;
      padding-top: 5px;
    }
  </ui:style>                                                      
  <g:HTMLPanel styleName="{style.item}">
    <div>
      <img src="" alt="" ui:field="icon" />
      <div ui:field="name"></div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>